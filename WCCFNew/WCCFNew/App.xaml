<Application x:Class="WCCFNew.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WCCFNew"
             StartupUri="login.xaml">
    <Application.Resources>
         <!--Header Boarder Style-->
        <Style x:Key="headerBoarderStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#333333"/>
        </Style>
        
        <!--Footer Boarder Style-->
        <Style x:Key="footerBoarderStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#c1c1c1"/>
        </Style>
        
        <!--Checkbox in Header Style-->
        <Style x:Key="checkBoxInHeader" TargetType="{x:Type CheckBox}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FlowDirection" Value="LeftToRight"/>
            <Setter Property="Foreground" Value="#c1c1c1"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!--Checkbox not in header Style-->
        <Style x:Key="checkBoxNotInHeader" TargetType="{x:Type CheckBox}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FlowDirection" Value="LeftToRight"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!--Button Style-->
        <Style x:Key="buttonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!--Textbox Style-->
        <Style x:Key="textBox" TargetType="{x:Type TextBox}">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <!--Password Box Style-->
        <Style x:Key="passwordBox" TargetType="{x:Type PasswordBox}">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="35"/>
        </Style>
        
    </Application.Resources>
</Application>
